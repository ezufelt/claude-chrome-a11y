{
  "manifest_version": 3,
  "name": "Claude AI Accessibility Helper",
  "version": "1.0.0",
  "description": "Adds accessibility headings to Claude AI conversations",
  "permissions": [],
  "host_permissions": [
    "https://claude.ai/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}